<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:textAlignment="center"
        android:textSize="40sp"
        android:text="@string/workout_scheduler"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/line_title"
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_new_workout"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_marginTop="50dp"
        android:background="#8E0000"
        android:textAlignment="center"
        android:gravity="center"
        android:text="+ New Workout"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_title" />

    <TextView
        android:id="@+id/text_upcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="Upcoming workouts"
        android:textStyle="bold"
        android:textColor="#d4d4d4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_new_workout" />

    <FrameLayout
        android:id="@+id/frame_upcoming"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_upcoming">

        <View
            android:id="@+id/view_upcoming"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8E0000"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:elevation="2dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/text_workout_title"
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/frame_upcoming"
        app:layout_constraintTop_toTopOf="@id/frame_upcoming"
        android:text="Workout Title"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/text_workout_title"
        app:layout_constraintTop_toTopOf="@id/text_workout_title"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/text_workout_date"
        android:layout_width="120dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@id/frame_upcoming"
        app:layout_constraintTop_toTopOf="@id/frame_upcoming"
        android:text="Active"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_workout_time"
        android:layout_width="120dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="@id/frame_upcoming"
        app:layout_constraintBottom_toBottomOf="@id/frame_upcoming"
        android:layout_marginBottom="5dp"
        android:text="Click to Start"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/upcoming_example1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#b0b0b0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_upcoming" />

    <View
        android:id="@+id/upcoming_example2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#b0b0b0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upcoming_example1" />

    <View
        android:id="@+id/upcoming_example3"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="#696969"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upcoming_example2" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="View More Upcoming Workouts"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/upcoming_example3"
        app:layout_constraintTop_toTopOf="@id/upcoming_example3" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.841" />

</androidx.constraintlayout.widget.ConstraintLayout>